<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_margin="10dp"
              android:background="@drawable/white_rounded_bg"
              android:minWidth="300dp"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/dialog_header_bg"
            android:gravity="center"
            android:orientation="vertical">


        <com.hussein.suggesttest.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/details"
                android:textColor="@color/white"
                android:textSize="16sp"/>

    </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lyContain"
                android:minWidth="300dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/shadow_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">


                <com.hussein.suggesttest.views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvName"
                        android:gravity="start|center"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>

                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_margin="2dp"
                      android:background="@color/lite_gray"/>

                <com.hussein.suggesttest.views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCat"
                        android:gravity="start|center"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>
                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_margin="2dp"
                      android:background="@color/lite_gray"/>

                <com.hussein.suggesttest.views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvRate"
                        android:gravity="start|center"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:textColor="@color/gray"
                        android:textSize="16sp"/>

                <View android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_margin="2dp"
                      android:background="@color/lite_gray"/>


                <com.hussein.suggesttest.views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvLink"
                        android:gravity="start|center"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:background="?selectableItemBackground"
                        android:textColor="@color/blue_link"
                        android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="@dimen/d5"
                    android:gravity="center"
                    android:orientation="vertical">

                <com.hussein.suggesttest.views.CustomAppButton
                        android:id="@+id/btnOK"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="@dimen/default_circle_indicator_stroke_width"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ripple_bg_style2"
                        android:text="@string/ok"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>